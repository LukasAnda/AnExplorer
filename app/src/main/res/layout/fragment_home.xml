<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:clipToPadding="false"
    android:paddingBottom="20dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="184dp">

            <dev.dworks.apps.anexplorer.ui.WrapContentViewPager
                android:id="@+id/roots_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="184dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="@color/gray_500"
                app:piv_unselectedColor="@color/gray_300"
                app:piv_viewPager="@id/roots_pager"
                attrs:piv_padding="12dp"
                attrs:piv_radius="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <dev.dworks.apps.anexplorer.ui.RecyclerViewPlus
            android:id="@+id/shortcuts_recycler"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clipToPadding="false"
            android:padding="10dp"
            app:columnWidth="100dp"
            app:type="gallery" />

        <LinearLayout
            android:id="@+id/recents_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start|center_vertical"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:text="Recent Media"
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/recents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:gravity="end|center_vertical"
                    android:minHeight="36dp"
                    android:paddingEnd="10dp"
                    android:text="MORE"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textColor="@color/accentColor" />

            </FrameLayout>

            <dev.dworks.apps.anexplorer.ui.RecyclerViewPlus
                android:id="@+id/recents_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:minHeight="@dimen/grid_item_height"
                android:paddingEnd="@dimen/list_item_padding"
                android:paddingStart="10dp"
                app:columnWidth="@dimen/grid_item_height"
                app:type="@integer/recycler_type" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>